description "<%= @daemon_name %> daemon"

kill signal INT
kill timeout 10

script
  [ -f /etc/default/<%= @daemon_name %> ] && . /etc/default/<%= @daemon_name %>
  $DAEMON
end script

post-start script
  tries=0
  while [ ! `netstat --listen | grep -qE '<%= node[:kafka][:port] %>|ircd'` ] && [ $tries -lt 3 ]; do
    sleep 1
    tries=$((tries + 1))
  done
end script
