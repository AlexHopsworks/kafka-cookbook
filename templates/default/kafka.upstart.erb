description "<%= @daemon_name %> daemon"

kill signal INT
kill timeout 10

script
  [ -f /etc/default/<%= @daemon_name %> ] && . /etc/default/<%= @daemon_name %>
  $DAEMON
end script

post-start script
  while ! netstat --listen | grep -qE 'ircd|<%= node[:kafka][:port] %>' ; do sleep 1 ; done
  while ! netstat --listen | grep -qE '<%= node[:kafka][:port] %>|ircd' ; do sleep 1 ; done
end script
